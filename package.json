{
    "name": "vscode-linuxcnc",
    "displayName": "LinuxCNC",
    "description": "Language support for LinuxCNC hal files.",
    "version": "0.2.0",
    "publisher": "PeterMue",
    "engines": {
        "vscode": "^1.5.0"
    },
    "license": "SEE LICENSE IN LICENSE",
    "homepage": "https://github.com/PeterMue/vscode-linuxcnc/blob/master/README.md",
    "bugs": {
        "url": "https://github.com/PeterMue/vscode-linuxcnc/issues"
    },
    "icon": "images/icon.png",
    "galleryBanner": {
        "theme": "dark",
        "color": "#6c7c59"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/PeterMue/vscode-linuxcnc.git"
    },
    "categories": [
        "Programming Languages"
    ],
    "main": "./client/out/extension",
    "activationEvents": [
        "onLanguage:linuxcnc-hal"
    ],
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "Client configuration",
            "properties": {
                "linuxcncLanguageServer.maxNumberOfProblems": {
                    "scope": "resource",
                    "type": "number",
                    "default": 100,
                    "description": "Controls the maximum number of problems produced by the server."
                },
                "linuxcncLanguageServer.trace.server": {
                    "scope": "window",
                    "type": "string",
                    "enum": [
                        "off",
                        "messages",
                        "verbose"
                    ],
                    "default": "off",
                    "description": "Traces the communication between VSCode and the halLanguageServer service."
                }
            }
        },
        "languages": [
            {
                "id": "linuxcnc-hal",
                "aliases": [
                    "LinuxCNC HAL",
                    "linuxcnc-hal"
                ],
                "extensions": [
                    ".hal"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "linuxcnc-hal",
                "scopeName": "source.linuxcnc.hal",
                "path": "./syntaxes/linuxcnc-hal.tmLanguage.json"
            }
        ]
    },
    "dependencies": {
        "vscode-languageclient": "^7.0.0"
    },
    "scripts": {
        "vscode:prepublish": "npm run build",
        "compile": "tsc -b",
        "watch": "tsc -b -w",
        "antlr4ts": "antlr4ts server/src/grammar/HAL.g4",
        "clean": "rm -rf node_modules **/node_modules out **/out **/*.tsbuildinfo",
        "build": "npm run antlr4ts && tsc -b",
        "postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
        "test": "sh ./scripts/e2e.sh"
    },
    "devDependencies": {
        "@tsconfig/recommended": "^1.0.1",
        "@types/node": "^14.14.22",
        "@types/vscode": "^1.52.0",
        "antlr4ts-cli": "^0.5.0-alpha.4",
        "typescript": "^4.0.2",
        "vscode-test": "^1.5.0"
    }
}
